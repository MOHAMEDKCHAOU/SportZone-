{# templates/contact_us/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
        <div class="mb-5 text-center">
            <h5 class="text-primary text-uppercase">Contact Us</h5>
            <h1 class="display-3 text-uppercase mb-0">Get In Touch</h1>
        </div>
        <div class="row g-0">
            <div class="col-lg-6">
                <div class="bg-dark p-5">
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-6">
                            {{ form_row(form.name, {'attr': {'class': 'form-control bg-light border-0 px-4', 'style': 'height: 55px;'}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.email, {'attr': {'class': 'form-control bg-light border-0 px-4', 'style': 'height: 55px;'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.subject, {'attr': {'class': 'form-control bg-light border-0 px-4', 'style': 'height: 55px;'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.message, {'attr': {'class': 'form-control bg-light border-0 px-4 py-3', 'rows': 4}}) }}
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-lg-6">
                <iframe class="w-100"
                        src="https://www.google.com/maps/embed?pb=!1m18...{your map parameters}"
                        frameborder="0" style="height: 457px; border:0;" allowfullscreen=""
                        aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
    </div>
{% endblock %}

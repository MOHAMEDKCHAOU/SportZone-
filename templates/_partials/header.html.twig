                        <a href="{{ path('app_logout') }}" class="btn btn-outline-light py-md-3 px-md-5 d-none d-lg-block">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light py-md-3 px-md-5 d-none d-lg-block">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>

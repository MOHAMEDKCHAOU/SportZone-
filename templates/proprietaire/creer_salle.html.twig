{# templates/proprietaire/creer_salle.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Salle{% endblock %}

{% block body %}
    <div class="container-fluid bg-primary p-5 mb-5">
        <div class="row py-5">
            <div class="col-12 text-center">
                <h1 class="display-2 text-uppercase text-white mb-md-4">Créer une Salle de Sport</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                {# Form to create the SalleDeSport #}
                {{ form_start(form, {'attr': {'class': 'salle-form'}}) }}
                <div class="row g-3">
                    <div class="col-12">
                        {{ form_row(form.nomSalle, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.adresse, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.numTel, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.heureOuverture, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.heureFermeture, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>

                    {# Image Upload Field #}
                    <div class="col-12">
                        {{ form_row(form.image, {
                            'attr': {
                                'class': 'form-control bg-light border-0 px-4',
                                'style': 'height: 55px;'
                            }
                        }) }}
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary w-100 py-3" type="submit">Créer la Salle</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

            {# Image Placeholder for UI #}
            <div class="col-lg-6">
                <img src="{{ asset('assets/img/salle.jpg') }}"
                     alt="Salle de Sport Image"
                     class="img-fluid"
                     style="height: 457px; object-fit: cover; border-radius: 10px; margin-left: 100px;">
            </div>
        </div>
    </div>
{% endblock %}

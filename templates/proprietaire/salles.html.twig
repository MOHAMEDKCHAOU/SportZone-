{# templates/proprietaire/salles.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Salles{% endblock %}

{% block body %}
    <div class="container-fluid bg-primary p-5 mb-5">
        <div class="row py-5">
            <div class="col-12 text-center">
                <h1 class="display-2 text-uppercase text-white mb-md-4">Mes Salles de Sport</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-5">
            {% for salle in salles %}
                <div class="col-md-6">
                    <div class="blog-item">
                        <div class="position-relative overflow-hidden rounded-top">
                            <img class="img-fluid" src="{{ asset('img/salle.jpg') }}" alt="{{ salle.nomSalle }}">
                        </div>
                        <div class="bg-dark d-flex align-items-center rounded-bottom p-4">
                            <div class="flex-shrink-0 text-center text-secondary border-end border-secondary pe-3 me-3">
                                <span>{{ salle.createdAt|date('d') }}</span>
                                <h6 class="text-light text-uppercase mb-0">{{ salle.createdAt|date('F') }}</h6>
                                <span>{{ salle.createdAt|date('Y') }}</span>
                            </div>
                            <div class="ms-3">
                                <a class="h5 text-uppercase text-light mb-1" href="#">
                                    {{ salle.nomSalle }}
                                </a>
                                <p class="text-secondary mb-0">{{ salle.adresse }}</p>
                                <p class="text-secondary mb-0">ðŸ“ž {{ salle.numTel }}</p>

                                {# Delete button/link #}
                                <form method="post"
                                      action="{{ path('proprietaire_salle_supprimer', {id: salle.id}) }}"
                                      onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette salle ?');">
                                    <button type="submit" class="btn btn-danger mt-3">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center text-muted">Aucune salle disponible.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
